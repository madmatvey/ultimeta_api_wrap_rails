              %tr{:style => "vertical-align: top"}
                %td{:style => "word-break: break-word;border-collapse: collapse !important;vertical-align: top;padding-top: 0px;padding-right: 0px;padding-bottom: 0px;padding-left: 0px"}
                  %div{:style => "color:#555555;line-height:120%;font-family:Verdana, Geneva, sans-serif;"}
                    %div{:style => "font-size:12px;line-height:14px;font-family:Verdana, Geneva, sans-serif;color:#555555;text-align:center;"}

                      %p{:style => "margin: 0;font-size: 14px;line-height: 17px;text-align: center;"}
                        = "Всего лотов: #{@tender.data_lots_count}"
