                      %p{:style => "margin: 0;font-size: 14px;line-height: 14px;text-align: left"}

                      %span{:style => "color: rgb(153, 51, 0); font-size: 14px; line-height: 14px;"}
                        -if @tender.data_sum_of_lots_money > 0
                          = "Общий бюджет закупки: #{number_to_currency(@tender.data_sum_of_lots_money, unit: @tender.data_currency, separator: ",", delimiter: " ", format: "%n %u")}"
